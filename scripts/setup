#!/usr/bin/env bash
set -euo pipefail

# Minimal setup helper for repository-level initialisation.

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
WORKSPACE_ROOT="$(cd "$SCRIPT_DIR/.." && pwd)"
cd "$WORKSPACE_ROOT"

echo "[setup] Ensuring required directories exist"
mkdir -p backups

echo "[setup] Done. Run 'bash scripts/install' to prepare Python environment."
